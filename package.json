{
  "name": "json-parser-exec",
  "private": true,
  "version": "1.1.1",
  "main": "src/electron.js",
  "description": "Aplicacion para validar, formatear y guardar JSONs f√°cilmente",
  "author": "Joaquim Colacilli",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "serve": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "build:publish": "electron-builder --win --publish always",
    "start": "concurrently \"npm run dev\" \"npm run electron:dev\""
  },
  "repository": "https://github.com/JoaquimColacilli/json-parser-exec",
  "build": {
    "appId": "com.json-parser-exec.id",
    "productName": "Parser-de-JSON",
    "directories": {
      "buildResources": "assets"
    },
    "nsis": {
      "unicode": true
    },
    "asar": true,
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "src/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": []
    },
    "linux": {
      "target": []
    },
    "forceCodeSigning": false,
    "extends": null,
    "publish": {
      "provider": "github",
      "owner": "JoaquimColacilli",
      "repo": "json-parser-exec",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lint": "^6.8.2",
    "@headlessui/react": "^2.2.0",
    "@uiw/react-codemirror": "^4.23.6",
    "autoprefixer": "^10.4.20",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "tailwindcss": "^3.4.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "vite": "^5.4.10"
  }
}
